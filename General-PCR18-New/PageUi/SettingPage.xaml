<Page x:Class="General_PCR18.PageUi.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:General_PCR18.PageUi"
      xmlns:uc="clr-namespace:General_PCR18.UControl"
      xmlns:lang="clr-namespace:General_PCR18.Lang"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">

    <Grid>
        <Grid x:Name="settingGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="leftMenu" Grid.Column="0" Background="#fff" Orientation="Vertical" Margin="0 20 0 0">
                <DockPanel Height="60">
                    <uc:LeftTab Text="{Binding Res.pcr_setting, Source={x:Static lang:RService.Current}}" 
                    ClickUri="pack://application:,,,/Images/SystemSet.png" Click="True" Index="0"
                    ClickEventTick="Tab1_ClickEventTick"></uc:LeftTab>
                </DockPanel>

                <DockPanel Height="60" Margin="0 20 0 0">
                    <uc:LeftTab Text="{Binding Res.user_manage, Source={x:Static lang:RService.Current}}" 
ClickUri="pack://application:,,,/Images/UserManage.png" ClickEventTick="Tab1_ClickEventTick" Index="1"></uc:LeftTab>
                </DockPanel>
            </StackPanel>

            <Border Grid.Column="1" BorderThickness="1" Margin="20 20 20 0" BorderBrush="#e6f4f5" Background="#fff" CornerRadius="6">
                <Frame x:Name="FrameWork" NavigationUIVisibility="Hidden"></Frame>
            </Border>
            
        </Grid>
    </Grid>
</Page>
