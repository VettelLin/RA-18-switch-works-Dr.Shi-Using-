<local:BasePage x:Class="General_PCR18.PageUi.PcrSetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:General_PCR18.PageUi"
      xmlns:lang="clr-namespace:General_PCR18.Lang"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"  Title="PcrSetPage">

    <local:BasePage.Resources>

        <Style TargetType="Label" x:Key="LBL_Title">
            <Setter Property="Width" Value="160" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Margin" Value="10 0 10 0" />
            <Setter Property="Foreground" Value="#000" />
        </Style>

    </local:BasePage.Resources>

    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" ShowGridLines="False">
            <StackPanel Orientation="Vertical">
                <DockPanel Margin="0 30 20 0" Width="400" HorizontalAlignment="Left">
                    <Label Content="{Binding Res.language, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                    <ComboBox x:Name="cmbLanguage" VerticalContentAlignment="Center" SelectionChanged="cmbLanguage_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Tag="zh-CN" Content="{Binding Res.chinese, Source={x:Static lang:RService.Current}}"></ComboBoxItem>
                        <ComboBoxItem Tag="en-US" Content="{Binding Res.english, Source={x:Static lang:RService.Current}}"></ComboBoxItem>
                    </ComboBox>
                </DockPanel>

                <DockPanel Margin="0 30 20 0" Width="400" HorizontalAlignment="Left">
                    <Label Content="{Binding Res.tube_detection_time, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="txtBoxDetectionTime" VerticalContentAlignment="Center" LostFocus="txtBoxDetectionTime_LostFocus"></TextBox>
                        <Label Grid.Column="1" Content="{Binding Res.minute, Source={x:Static lang:RService.Current}}" Width="50"></Label>
                    </Grid>

                </DockPanel>

                <DockPanel Margin="0 30 20 0" Width="500" HorizontalAlignment="Left">
                    <Label Content="{Binding Res.data_result_path, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="txtBoxDataPath" VerticalContentAlignment="Center"></TextBox>
                        <Button Grid.Column="1" Content="{Binding Res.btn_browse, Source={x:Static lang:RService.Current}}" Width="50" Click="Browse_Click"></Button>
                    </Grid>
                </DockPanel>
            </StackPanel>

        </Grid>
    </Grid>
</local:BasePage>
