<local:BasePage x:Class="General_PCR18.PageUi.SampleRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:General_PCR18.PageUi"
      xmlns:lang="clr-namespace:General_PCR18.Lang"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="SampleRegistrationPage">

    <local:BasePage.Resources>

        <Style TargetType="Label" x:Key="LBL_Title">
            <Setter Property="Width" Value="120" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Margin" Value="10 0 10 0" />
            <Setter Property="Foreground" Value="#000" />
        </Style>

        <Style TargetType="Label" x:Key="LBL_Content">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Margin" Value="0 0 10 0" />
            <Setter Property="Foreground" Value="#ffffff" />
        </Style>

    </local:BasePage.Resources>

    <Grid Background="#e6f4f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7.5*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- LEFT -->
        <Grid Grid.Column="0" Background="#fff" Margin="20">
            <Border BorderThickness="1" Margin="20" BorderBrush="#e6f4f5"  CornerRadius="6">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="30">
                        </RowDefinition>
                    </Grid.RowDefinitions>

                    <!-- X 轴 -->
                    <Grid Grid.Row="0" Background="#e6f4f5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label x:Name="txtBkAll" Content="All" Grid.Column="0" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown"  />
                        <Label x:Name="txtBk1" Content="1" Grid.Column="1" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        <Label x:Name="txtBk2" Content="2" Grid.Column="2" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        <Label x:Name="txtBk3" Content="3" Grid.Column="3" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        <Label x:Name="txtBk4" Content="4" Grid.Column="4" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        <Label x:Name="txtBk5" Content="5" Grid.Column="5" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        <Label x:Name="txtBk6" Content="6" Grid.Column="6" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                    </Grid>

                    <!-- 中间 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!-- Y轴 -->
                        <Grid Grid.Column="0" Background="#e6f4f5">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label x:Name="txtBkA" Content="A" Grid.Row="0" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                            <Label x:Name="txtBkB" Content="B" Grid.Row="1" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                            <Label x:Name="txtBkC" Content="C" Grid.Row="2" Style="{StaticResource TabStyle}" MouseLeftButtonDown="XTab_MouseLeftButtonDown" />
                        </Grid>

                        <!-- 样本 -->
                        <Grid x:Name="sampleGrid" Grid.Column="1" Background="#fff" ShowGridLines="False">

                        </Grid>

                    </Grid>

                    <!-- 底部说明 -->
                    <StackPanel Grid.Row="2" Background="#e6f4f5" Orientation="Horizontal">
                        <!-- rgb(155,81,224) -->
                        <Ellipse Width="10" Height="10" Fill="#9b51e0" Margin="40 0 10 0"/>
                        <TextBlock Text="HPV" VerticalAlignment="Center"></TextBlock>

                        <!-- rgb(33,150,83) -->
                        <Ellipse Width="10" Height="10" Fill="#219653" Margin="50 0 10 0"/>
                        <TextBlock Text="RNA" VerticalAlignment="Center"></TextBlock>

                        <!-- rgb(235,87,87) -->
                        <Ellipse Width="10" Height="10" Fill="#eb5757" Margin="50 0 10 0"/>
                        <TextBlock Text="DNA" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

        <!-- 右边编辑框 -->
        <Grid Grid.Column="1" Background="#fff" Margin="10 20 10 20">
            <Border BorderThickness="1" Margin="20" BorderBrush="#e6f4f5"  CornerRadius="6">
                <StackPanel Orientation="Vertical" >

                    <DockPanel Margin="0 30 20 0" LastChildFill="True">
                        <Label DockPanel.Dock="Left" Content="{Binding Res.sample_id, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                        <TextBox x:Name="txtSampleId" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" DockPanel.Dock="Left" MaxLength="20"
                                 LostFocus="txtSampleId_LostFocus" TextChanged="txtSampleId_TextChanged"></TextBox>
                    </DockPanel>

                    <DockPanel Margin="0 30 20 0" LastChildFill="True">
                        <Label DockPanel.Dock="Left" Content="{Binding Res.patient_id, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                        <TextBox x:Name="txtPatientId" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" DockPanel.Dock="Left" MaxLength="20"
                                 LostFocus="txtPatientId_LostFocus" TextChanged="txtPatientId_TextChanged"></TextBox>
                    </DockPanel>

                    <DockPanel Margin="0 30 20 0">
                        <Label Content="{Binding Res.sample_type, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                        <ComboBox x:Name="cmbSampleType" VerticalContentAlignment="Center" SelectionChanged="cmbSampleType_SelectionChanged">
                            <ComboBoxItem Tag="1" Content="HPV"></ComboBoxItem>
                            <ComboBoxItem Tag="2" Content="RNA"></ComboBoxItem>
                            <ComboBoxItem Tag="3" Content="DNA"></ComboBoxItem>
                        </ComboBox>
                    </DockPanel>

                    <DockPanel Margin="0 30 20 0" LastChildFill="True">
                        <Label Content="{Binding Res.test_date, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                        <DatePicker x:Name="dpTestDate"  Style="{StaticResource DatePickerStyle1}"           
                            HorizontalAlignment="Stretch" FontSize="14"  BorderThickness="0" 
                                     VerticalContentAlignment="Center" SelectedDateChanged="dpTestDate_SelectedDateChanged"
                                     PreviewTextInput="dpTestDate_PreviewTextInput" />
                    </DockPanel>

                    <!-- 用户存储路径（可选，仅本次实验生效）。放在 Sampling Date 下面 -->
                    <DockPanel Margin="0 30 20 0" LastChildFill="True">
                        <Label Content="{Binding Res.user_path, Source={x:Static lang:RService.Current}}" Style="{StaticResource LBL_Title}"  />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="txtBackupPath" VerticalContentAlignment="Center" IsReadOnly="True" ToolTip="为本次实验选择一个额外备份目录（可选）"></TextBox>
                            <Button Grid.Column="1" Content="{Binding Res.btn_browse, Source={x:Static lang:RService.Current}}" Width="50" Click="BrowseBackup_Click"></Button>
                        </Grid>
                    </DockPanel>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</local:BasePage>
