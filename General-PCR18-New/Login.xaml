<Window x:Class="General_PCR18.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:General_PCR18"
        xmlns:lang="clr-namespace:General_PCR18.Lang"
        mc:Ignorable="d"
        Title="General-PCR18" Height="1080" Width="1920" Background="#e6f4f5">

    <Window.Resources>
        
        <Style TargetType="Label" x:Key="LBL_Title">
            <Setter Property="Width" Value="70" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Margin" Value="10 0 10 0" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>

        <Style x:Key="username" TargetType="TextBox">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush AlignmentX="Left"
                                Viewport="10,5,30,30"
                                ViewportUnits="Absolute"
                                TileMode="None"
                                Stretch="None" ImageSource="pack://application:,,,/Images/username.png"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>

            <Setter Property="BorderBrush" Value="#adadad"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                            <Grid>

                                <ScrollViewer x:Name="PART_ContentHost" Margin="50 0 0 0" 
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush AlignmentX="Right"
                            Viewport="12,5,30,30"
                            ViewportUnits="Absolute"
                            TileMode="None"
                            Stretch="None" ImageSource="pack://application:,,,/Images/username.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush AlignmentX="Right"
                            Viewport="12,5,30,30"
                            ViewportUnits="Absolute"
                            TileMode="None"
                            Stretch="None" ImageSource="pack://application:,,,/Images/username.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="BorderBrush"  Value="#adadad"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush AlignmentX="Left"
                                Viewport="10,5,30,30"
                                ViewportUnits="Absolute"
                                TileMode="None"
                                Stretch="None" ImageSource="pack://application:,,,/Images/code.png"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>

            <Setter Property="BorderBrush" Value="#adadad"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}">
                            <Grid>

                                <ScrollViewer x:Name="PART_ContentHost" Margin="50 0 0 0" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush AlignmentX="Right"
                                        Viewport="12,5,30,30"
                                        ViewportUnits="Absolute"
                                        TileMode="None"
                                        Stretch="None" ImageSource="pack://application:,,,/Images/code.png"/>   
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#000"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush AlignmentX="Right"
                                        Viewport="12,5,30,30"
                                        ViewportUnits="Absolute"
                                        TileMode="None"
                                        Stretch="None" ImageSource="pack://application:,,,/Images/code.png"/>       
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="BorderBrush"  Value="#adadad"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid  Background="#fff" Width="1000" Height="600">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.Clip>
                <RectangleGeometry RadiusX="14" RadiusY="14" Rect="0,0,1000,600" />
            </Grid.Clip>

            <Image Grid.Column="1" Stretch="UniformToFill" Source="pack://application:,,,/Images/LoginBk.png" HorizontalAlignment="Right"  />

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"></RowDefinition>
                    <RowDefinition Height="150"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20 30 0 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="30" Foreground="#06919d" FontWeight="Bold"></TextBlock>
                        <TextBlock Margin="10 0" Text="{Binding Res.login_title, Source={x:Static lang:RService.Current}}" FontSize="30"></TextBlock>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding Res.login_welcome, Source={x:Static lang:RService.Current}}" FontSize="20" Margin="20 30 0 0"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="50 0" >
                    <DockPanel Margin="0 00 0 0">
                        <TextBox x:Name="txtUsername" Style="{StaticResource username}" HorizontalAlignment="Stretch" MaxLength="50">
                        </TextBox>
                    </DockPanel>

                    <StackPanel Margin="0 30 0 0">
                        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Stretch" MaxLength="50" KeyDown="txtPassword_KeyDown" >
                        </PasswordBox>
                    </StackPanel>
                </StackPanel>

                <DockPanel Grid.Row="2" Margin="50 0">
                    <Button x:Name="btnLogout" FontSize="16" DockPanel.Dock="Right" Content="{Binding Res.logout, Source={x:Static lang:RService.Current}}"  
     Margin="20,0,0,0"  Width="70" Height="40" Click="btnLogout_Click"/>
                    <Button x:Name="btnLogin" FontSize="16" DockPanel.Dock="Left"  Content="{Binding Res.login, Source={x:Static lang:RService.Current}}"  
                         Margin="0,0,0,0" Width="Auto"  Height="40" Foreground="#fff" Background="#23bfcd" Click="btnLogin_Click"/>                    
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
