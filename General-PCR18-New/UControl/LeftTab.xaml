<UserControl x:Class="General_PCR18.UControl.LeftTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:General_PCR18.UControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200">
    <Grid x:Name="mainGrid" Background="#06919d" MouseLeftButtonDown="Click_MouseLeftButtonDown">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0 0 0">
            <Border x:Name="border" Width="24" Height="24" Margin="10 0 0 0">
                <Image HorizontalAlignment="Left" x:Name="image" Width="48" Stretch="Uniform" 
                   Source="pack://application:,,,/Images/SampleRegister.png">
                </Image>
            </Border>
            <TextBlock x:Name="txtBlock" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Text}" FontSize="16" 
                   Foreground="#fff"
                   VerticalAlignment="Center" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
